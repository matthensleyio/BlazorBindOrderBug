@page "/"

<h1>Showcase Blazor Bind Attribtue Bug</h1>

<label for="selectedValue_a">This group of input elements have @@bind declared <span style="text-decoration: underline;">first</span>. They will be rendered <span style="text-decoration: underline;">without</span> any class or id attributes.</label>
<select @bind="_selectedValueA" class="form-control" id="selectedValue_a">
    <option value="1">One</option>
    <option value="2">Two</option>
    <option value="3">Three</option>
</select>

<br />

<input @bind="textA" class="form-control" id="text_a" type="text" />

<br />
<br />

<label for="selectedValue_b">This group of input elements have @@bind declared <span style="text-decoration: underline;">last</span>. They will be rendered <span style="text-decoration: underline;">without</span> any class or id attributes.</label>
<select class="form-control" id="selectedValue_b" @bind="_selectedValueB">
    <option value="1">One</option>
    <option value="2">Two</option>
    <option value="3">Three</option>
</select>

<br />

<input class="form-control" id="text_b" type="text" @bind="textB" />



@functions {
    private int _selectedValueA;
    private int _selectedValueB;

    private string textA;
    private string textB;
}